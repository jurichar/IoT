Vagrant.configure("2") do |config|

  config.vm.box = "centos/8"
  config.vm.box_version = "2011.0"
  config.vm.box_url = "https://app.vagrantup.com/centos/boxes/8"

  config.vm.provision "shell", path: "./setup.sh"
  
  config.vm.provision "file", source: "~/.ssh/id_rsa.pub", destination: "~/.ssh/me.pub"
  config.vm.provision "shell", inline: <<-SHELL
    cat /home/vagrant/.ssh/me.pub >> /home/vagrant/.ssh/authorized_keys
  SHELL

  config.vm.define "mpochardS" do |control|
    control.vm.provider "virtualbox" do |vb|
      vb.name = "mpochardS"
      vb.customize ["modifyvm", :id, "--cpuexecutioncap", "50", "--name", "mpochardS"]
      vb.linked_clone = true
      vb.check_guest_additions = false
      vb.memory = "1024"
      vb.cpus = "1"
    end      

    control.vm.hostname = "mpochardS"
    control.vm.network "private_network", ip: "192.168.42.110", virtualbox__intnet: true

    control.vm.network "forwarded_port", guest: 22, host: 2222, id: "ssh", disabled: true
    control.vm.network "forwarded_port", guest: 22, host: 2000 # control Node SSH
    control.vm.network "forwarded_port", guest: 6443, host: 6443 # API Access
    control.vm.provision "shell", inline: <<-SHELL
    curl -sfL https://get.k3s.io | INSTALL_K3S_VERSION=v1.19.2+k3s1 K3S_KUBECONFIG_MODE="644" INSTALL_K3S_EXEC="--node-ip=192.168.42.110" sh -
  SHELL
  end
end
