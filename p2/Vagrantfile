Vagrant.configure("2") do |config|
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "1024"
    vb.cpus = "1"
  end
  config.vm.box = "centos/7"
  config.vm.box_version = "2004.01"
  # config.vm.box_url = "https://app.vagrantup.com/ubuntu/boxes/trusty64"
  config.vm.network "public_network", auto_config: false, bridge: "docker0"
  # Kubernetes API Access
  config.vm.network "forwarded_port", guest: 6443, host: 6443
  config.ssh.insert_key = false

  for p in 30000..30100
    config.vm.network "forwarded_port", guest: p, host: p, protocol: "tcp"
  end

  config.vm.define "jurichar" do |control|
    control.vm.hostname = "juricharS"
    # config.vm.provision "shell", run: "always", inline: "ifconfig eth1 192.168.56.110 netmask 255.255.255.0 up"
    # config.vm.provision "shell", run: "always", inline: "sudo apt-get install -y systemd"

    config.vm.provision "shell", run: "always", inline: <<-SHELL
    echo "******** Installing dependencies ********"

    echo "******** Begin installing k3s ********"
    curl -sfL https://get.k3s.io | INSTALL_K3S_VERSION=v1.19.2+k3s1 K3S_KUBECONFIG_MODE="644" sh -
    echo "******** End installing k3s ********"

    echo "******** Begin installing helm ********"
    curl https://raw.githubusercontent.com/helm/helm/master/scripts/get-helm-3 | bash
    echo "******** End installing helm ********"
  SHELL
  end
end